#pragma once

#include <sstream>
#include <string>

namespace dungeons {
	const struct {
		int major {@MareTethys_VERSION_MAJOR@};
		int minor {@MareTethys_VERSION_MINOR@};
		int patch {@MareTethys_VERSION_PATCH@};
		int tweak {@MareTethys_VERSION_TWEAK@};
		std::string to_string() const
		{
			std::stringstream ss;
			ss << major;
			if (minor > 0)
				ss << "." << minor;
			if (patch > 0)
				ss << "." << patch;
			if (tweak > 0)
				ss << "." << tweak;
			return ss.str();
		}
	} version;
}
